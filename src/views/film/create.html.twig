{% extends 'base.html.twig' %}

{% block title %}Créer un film{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card border-0 rounded-4 shadow-sm">
                    <div class="card-header text-center bg-dark text-white py-4">
                        <h2 class="h5 mb-0">
                            <i class="fas fa-clapperboard"></i> Ajouter un film
                        </h2>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/film/create" class="needs-validation" novalidate>
                            <!-- Titre -->
                            <div class="form-floating mb-4">
                                <input type="text" class="form-control" id="title" name="title" placeholder="Titre du film" required>
                                <label for="title">Titre du film</label>
                                <div class="invalid-feedback">Veuillez entrer un titre.</div>
                            </div>

                            <!-- Année de sortie -->
                            <div class="form-floating mb-4">
                                <input type="number" class="form-control" id="year" name="year" min="1888" max="2099" placeholder="Année de sortie" required>
                                <label for="year">Année de sortie</label>
                                <div class="invalid-feedback">Veuillez entrer une année valide (1888-2099).</div>
                            </div>

                            <!-- Genre -->
                            <div class="form-floating mb-4">
                                <input type="text" class="form-control" id="type" name="type" placeholder="Genre" required>
                                <label for="type">Genre</label>
                                <div class="invalid-feedback">Veuillez entrer un genre.</div>
                            </div>

                            <!-- Synopsis -->
                            <div class="form-floating mb-4">
                                <textarea class="form-control" id="synopsis" name="synopsis" placeholder="Résumé" style="height: 100px;" required></textarea>
                                <label for="synopsis">Résumé</label>
                                <div class="invalid-feedback">Veuillez entrer un résumé.</div>
                            </div>

                            <!-- Réalisateur -->
                            <div class="form-floating mb-4">
                                <input type="text" class="form-control" id="director" name="director" placeholder="Réalisateur" required>
                                <label for="director">Réalisateur</label>
                                <div class="invalid-feedback">Veuillez entrer le nom du réalisateur.</div>
                            </div>

                            <!-- Bouton de soumission -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-dark btn-lg">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center bg-light py-3">
                        <a href="/film/list" class="text-secondary text-decoration-none">
                            <i class="fas fa-arrow-left"></i> Retour à la liste des films
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
